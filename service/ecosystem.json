{
  "apps" : [{
    "name"      : "API",
    "script"    : "server.js",
    "env": {
      "COMMON_VARIABLE": "true"
    },
    "env_production" : {
      "NODE_ENV": "production"
    }
  }],
  "deploy" : {
    "production" : {
      "user" : "root",
      "host" : [""],
      "ref"  : "origin/master",
